/*** Settings ***/
@import "nib"
@import "../lib/css/css"

global-reset();
reset-html5();
form-reset();
b
strong
i
em
	font-style normal
	font-weight normal

/* fonts */
@font-face
	font-family "CocogooseProSemiLight"
	src url("../fonts/Zetafonts_CocogoosePro_SemiLight.woff") format("woff")

@font-face
	font-family "CocogooseProUltraLight"
	src url("../fonts/Zetafonts_CocogoosePro_UltraLight.woff") format("woff")

/* //fonts */

html
	height 100%
body
	width 100%
	height 100%
	min-height 100vh
	line-height 1
	cursor default

	font-family "CocogooseProUltraLight"

/*** //Settings ***/

/*** Page styles ***/
.page
	display block
	width 100%
	min-height 100%

.page-content
	width 100%
	height 100%

.company-card
	display flex
	height 100%
	max-height 100%

.company-information
	width 40%
	background-color #9b9b9b
	min-height 100vh

	.company-logo
		display block
		width 100%
		max-width 360px
		margin 0 auto
		margin-top 200px

	.company-specialization
		display block
		width auto
		max-width 380px

		margin 0 auto
		margin-top 30px

		color #000

		font-family "CocogooseProSemiLight"
		font-size 12px

	.company-description
		display block
		margin 0 auto
		margin-top 210px
		width 375px

		.company-description-item
			display block
			margin-bottom 40px

		a
			text-decoration none
			color #000



.main-slider
	width 60%

	.main-slider-item
		img
			display block
			width 100%
			height 100vh
			object-fit cover
			object-position center


/*** //Page styles ***/
